
public class massiv {

	private static int imin;

	public static void main(String[] args) {
		int[] a = { 3, 1, 0, 8, 17, 9, 15, 2, 3, 10, 8, -8, 6, -1, 4 };
		int min = a[0];
		imin = 0;
		for (int i = 0; i < a.length; i++)
			if (a[i] < min) {
				min = a[i];
				imin = i;
			}
		;
		{
			System.out.println("минимальный элемента массива " + min + " индекс элемента " + imin);
		}
	}
}
