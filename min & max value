
public class MinMaxArrey {

	public static void main(String[] args) {
		int[] a = { 3, 1, 0, 8, 17, 9, 15, 2, 3, 10 };
		int min = a[0];
		int max = a[0];
		for (int i = 0; i < a.length; i++)
			if (a[i] < min) {
				min = a[i];
				for (int j = 0; j < a.length; j++)
				if (a[j] > max) {
					max = a[j];
				}
			}
		{
			System.out.println("min value = " + min);
			System.out.println("max value = " + max);
		}
	}
}
